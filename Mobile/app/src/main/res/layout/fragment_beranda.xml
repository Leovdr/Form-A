<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".FragmentBeranda">

    <!-- Background -->
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgframee" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Nama Pengguna -->
        <TextView
            android:id="@+id/nama_pengguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leovander Aditama"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"/>

        <!-- Panduan Pengisian -->
        <ImageView
            android:id="@+id/img_panduan"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_menu_book_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp"
            android:layout_marginStart="45dp"/>

        <TextView
            android:id="@+id/txt_panduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panduan\nPengisian"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_panduan"
            app:layout_constraintStart_toStartOf="@+id/img_panduan"
            app:layout_constraintEnd_toEndOf="@+id/img_panduan"
            android:layout_marginTop="5dp"/>

        <!-- Tentang Aplikasi -->
        <ImageView
            android:id="@+id/img_tentang"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_perm_device_information_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_panduan"
            android:layout_marginTop="150dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/txt_tentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang\nAplikasi"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_tentang"
            app:layout_constraintStart_toStartOf="@+id/img_tentang"
            app:layout_constraintEnd_toEndOf="@+id/img_tentang"
            android:layout_marginTop="5dp"/>

        <!-- Kebijakan Privasi -->
        <ImageView
            android:id="@+id/img_privasi"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_privacy_tip_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_tentang"
            android:layout_marginTop="150dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/txt_privasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebijakan\nPrivasi"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_privasi"
            app:layout_constraintStart_toStartOf="@+id/img_privasi"
            app:layout_constraintEnd_toEndOf="@+id/img_privasi"
            android:layout_marginTop="5dp"/>

        <!-- Elemen Soon 1 -->
        <ImageView
            android:id="@+id/img_soon1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_book_24"
            app:layout_constraintTop_toBottomOf="@+id/img_panduan"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="@+id/img_panduan"/>

        <TextView
            android:id="@+id/txt_soon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soon"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_soon1"
            app:layout_constraintStart_toStartOf="@+id/img_soon1"
            app:layout_constraintEnd_toEndOf="@+id/img_soon1"
            android:layout_marginTop="5dp"/>

        <!-- Elemen Soon 2 -->
        <ImageView
            android:id="@+id/img_soon2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_library_books_24"
            app:layout_constraintTop_toBottomOf="@+id/img_tentang"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="@+id/img_tentang"/>

        <TextView
            android:id="@+id/txt_soon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soon"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_soon2"
            app:layout_constraintStart_toStartOf="@+id/img_soon2"
            app:layout_constraintEnd_toEndOf="@+id/img_soon2"
            android:layout_marginTop="5dp"/>

        <!-- Elemen Soon 3 -->
        <ImageView
            android:id="@+id/img_soon3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/baseline_control_point_duplicate_24"
            app:layout_constraintTop_toBottomOf="@+id/img_privasi"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="@+id/img_privasi"/>

        <TextView
            android:id="@+id/txt_soon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soon"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_soon3"
            app:layout_constraintStart_toStartOf="@+id/img_soon3"
            app:layout_constraintEnd_toEndOf="@+id/img_soon3"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:text="Media Sosial"/>

        <!-- Instagram Icon -->
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/instagramicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="150dp"
            />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/twittericon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="150dp"
            />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/tiktokicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="60dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
