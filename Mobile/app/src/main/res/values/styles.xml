<resources>
    <!-- Style for TextInputLayout -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <!-- Background color -->
        <item name="boxBackgroundColor">@android:color/white</item>

        <!-- Stroke color when focused -->
        <item name="boxStrokeColor">@color/black</item>

        <!-- Box collapsed padding -->
        <item name="boxCollapsedPaddingTop">4dp</item>

        <!-- No stroke width in regular state -->
        <item name="boxStrokeWidth">0dp</item>

        <!-- No stroke width in focused state -->
        <item name="boxStrokeWidthFocused">0dp</item>

        <!-- Hint settings -->
        <item name="hintEnabled">true</item>

        <!-- Text color for the label (hint) -->
        <item name="hintTextColor">@color/black</item>
    </style>

    <!-- Custom EditText style inside TextInputLayout -->
    <style name="CustomTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <!-- Adjust padding for a compact layout -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
